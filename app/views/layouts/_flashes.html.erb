<% if alert %>
  <div class="alert alert-danger">
    <div class="container">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= alert %>
    </div>
  </div>
<% end %>

<% if notice %>
  <div class="alert alert-warning">
    <div class="container">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= notice %>
    </div>
  </div>
<% end %>

<noscript>
  <div class="alert alert-danger">
    <div class="container">
      Please enable JavaScript on your browser for better experience.
    </div>
  </div>
</noscript>
